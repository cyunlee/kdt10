<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원 정보</title>
</head>
<body>
    <h1>회원 정보</h1><br>
    <a href="/user">HOME</a><br>
    <p>ID 수정 불가능, Password, Name 수정 가능</p><br>
    
    <form>
        <label for="userid">ID</label>
        <input type="text" id="id"><br>
        <label for="pw">Password</label>
        <input type="text" id="pw"><br>
        <label for="name">Name</label>
        <input type="text" id="name"><br>

        <button type="button" onclick="profileEdit();">Edit</button>
        <button type="button" onclick="profileDelete();">Delete</button>
    </form>

    <script>
        function profileEdit() {
            const form = document.forms['form_profile'];

            if(!form.checkValidity()){
                form.reportValidity();
                return;
            }

            axios({
                method: 'PATCH',
                url: '/user/profile/edit',
                data: {
                    id: form.id.value,
                    userid: form.userid.value,
                    pw: form.pw.value,
                    name: form.name.value,
                }
            }).then((res)=>{
                console.log(res.data);
                alert('수정 성공!');
            })
        }
   
        function profileDelete() {
            const form = document.forms['form_profile'];

            if(!form.checkValidity()){
                form.reportValidity();
                return;
            }

            axios({
                method: 'DELETE',
                url: '/user/profile/delete',
                data: {
                    id: form.id.value
                }
            }).then((res)=>{
                console.log(res.data);
                alert('회원 탈퇴 성공!');

                //회원 탈퇴 했으면 프로필 페이지 X -> 메인 페이지로 이동

                document.location.href = '/user';
            }).catch((err)=>{
                console.log(err);
            })
        }
   </script>
</body>
</html>